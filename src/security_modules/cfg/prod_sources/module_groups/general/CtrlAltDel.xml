<?xml version="1.0" encoding="UTF-8"?>
<security_module sortKey="100" name="Disable Ctrl-Alt-Del">
        <library>CtrlAltDel</library>
        <description>Disables the Ctrl+Alt+Del reboot key sequence to prevent some accidental system reboots in mixed OS environments where Ctrl+Alt+Del is commonly used to initiate a login. The use of Ctrl+Alt+Del is an easy way for an attacker who has physical access to the system to circumvent security measures of the system.</description>
        <scan_weight>1</scan_weight>
        <action_weight>1</action_weight>
        <severity_level>1</severity_level>
