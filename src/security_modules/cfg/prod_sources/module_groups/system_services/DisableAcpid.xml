<?xml version="1.0" encoding="UTF-8"?>
<security_module sortKey="100" name="Disable ACPI Daemon">
        <library>DisableAcpid</library>
        <description>Disable the Advanced Configuration and Power Interface (acpid) daemon.</description>
        <scan_weight>1</scan_weight>
        <action_weight>1</action_weight>
        <severity_level>1</severity_level>
        <platforms>
          <cpe-item name="cpe:/o:centos:centos:5">
            <services>
              <service seq="1" name="acpid"/>
            </services>
            <packages>
              <package name="acpid"/>
            </packages>
          </cpe-item>
          <cpe-item name="cpe:/o:redhat:enterprise_linux:5">
            <services>
              <service seq="1" name="acpid"/>
            </services>
            <packages>
              <package name="acpid"/>
            </packages>
          </cpe-item>
          <cpe-item name="cpe:/o:oracle:enterprise_linux:5">
            <services>
              <service seq="1" name="acpid"/>
            </services>
            <packages>
              <package name="acpid"/>
            </packages>
          </cpe-item>
        </platforms>
        <compliancy/>
        <views>
          <member>Hardware</member>
          <member>Wireless</member>
        </views>
      </security_module>
