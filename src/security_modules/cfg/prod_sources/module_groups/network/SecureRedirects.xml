<?xml version="1.0" encoding="UTF-8"?>
<security_module sortKey="100" name="Disable Accepting Secure Redirects">
        <library>SecureRedirects</library>
        <description>Configures the system to block secure ICMP redirects. A secure redirect message is sent by a gateway that appears in the host's default gateway list. This message notifies the system that there is a shorter route to a particular destination. Spoofing a router's IP address is fairly simple; therefore, an attacker could use ICMP redirects in a potent denial-of-service attack if your system is configured to accept such redirects.</description>
        <scan_weight>1</scan_weight>
        <action_weight>1</action_weight>
        <severity_level>5</severity_level>
        <platforms>
          <cpe-item name="cpe:/o:centos:centos:4"/>
          <cpe-item name="cpe:/o:centos:centos:5"/>
          <cpe-item name="cpe:/o:centos:centos:6"/>
          <cpe-item name="cpe:/o:novell:opensuse:10"/>
          <cpe-item name="cpe:/o:novell:opensuse:11"/>
          <cpe-item name="cpe:/o:novell:suse_linux:10"/>
          <cpe-item name="cpe:/o:novell:suse_linux:11"/>
          <cpe-item name="cpe:/o:oracle:enterprise_linux:4"/>
          <cpe-item name="cpe:/o:oracle:enterprise_linux:5"/>
          <cpe-item name="cpe:/o:redhat:enterprise_linux:4"/>
          <cpe-item name="cpe:/o:redhat:enterprise_linux:5"/>
          <cpe-item name="cpe:/o:redhat:enterprise_linux:6"/>
          <cpe-item name="cpe:/o:redhat:fedora:10"/>
