<?xml version="1.0" encoding="UTF-8"?>
<security_module sortKey="100" name="Disable Abrtd">
        <library>DisableAbrtd</library>
        <description>The abrtd daemon is used to generate information about processes that have crashed, and can expose sensitive information about the system.</description>
        <scan_weight>1</scan_weight>
        <action_weight>1</action_weight>
        <severity_level>1</severity_level>
        <platforms>
          <cpe-item name="cpe:/o:redhat:enterprise_linux:6">
            <services>
              <service seq="1" name="abrtd"/>
            </services>
            <packages>
              <package name="abrt"/>
            </packages>
          </cpe-item>
          <cpe-item name="cpe:/centos:centos:6">
            <services>
              <service seq="1" name="abrtd"/>
            </services>
            <packages>
              <package name="abrt"/>
            </packages>
          </cpe-item>
          <cpe-item name="cpe:/o:oracle:enterprise_linux:6">
            <services>
              <service seq="1" name="abrtd"/>
            </services>
            <packages>
              <package name="abrt"/>
            </packages>
          </cpe-item>
        </platforms>
        <compliancy/>
        <views>
          <member>System Services</member>
        </views>
      </security_module>
