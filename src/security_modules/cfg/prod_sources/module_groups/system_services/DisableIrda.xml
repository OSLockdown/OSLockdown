        <platforms>
          <cpe-item name="cpe:/o:centos:centos:5">
            <services>
              <service seq="1" name="irda"/>
            </services>
            <packages>
              <package name="irda-utils"/>
            </packages>
          </cpe-item>
          <cpe-item name="cpe:/o:redhat:enterprise_linux:5">
            <services>
              <service seq="1" name="irda"/>
            </services>
            <packages>
              <package name="irda-utils"/>
            </packages>
          </cpe-item>
          <cpe-item name="cpe:/o:oracle:enterprise_linux:5">
            <services>
              <service seq="1" name="irda"/>
            </services>
            <packages>
              <package name="irda-utils"/>
            </packages>
          </cpe-item>
        </platforms>
        <compliancy/>
