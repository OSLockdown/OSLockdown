<?xml version="1.0" encoding="UTF-8"?>
<security_module sortKey="100" name="Secure Netrc Files">
        <library>SecureNetrcFiles</library>
        <description>Restricts .netrc file permissions to owner read and write access, which prevents others from gaining access to this information. The .netrc files are used for remote login without interaction. This is achieved through storing an unencrypted password in the file. If used, these files should be protected from all other users.</description>
        <scan_weight>10</scan_weight>
        <action_weight>1</action_weight>
        <severity_level>5</severity_level>
        <platforms>
          <cpe-item name="cpe:/o:centos:centos:4"/>
          <cpe-item name="cpe:/o:centos:centos:5"/>
          <cpe-item name="cpe:/o:centos:centos:6"/>
          <cpe-item name="cpe:/o:novell:opensuse:10"/>
          <cpe-item name="cpe:/o:novell:opensuse:11"/>
          <cpe-item name="cpe:/o:novell:suse_linux:10"/>
          <cpe-item name="cpe:/o:novell:suse_linux:11"/>
          <cpe-item name="cpe:/o:oracle:enterprise_linux:4"/>
          <cpe-item name="cpe:/o:oracle:enterprise_linux:5"/>
