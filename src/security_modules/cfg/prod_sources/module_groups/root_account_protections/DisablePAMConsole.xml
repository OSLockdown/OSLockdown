<?xml version="1.0" encoding="UTF-8"?>
<security_module sortKey="100" name="Disable PAM Console Library">
        <library>DisablePAMConsole</library>
        <description>Disables PAM from granting sole access to administrative privileges to the first user who logs into the console. The PAM Console library gives users (at the physical console) capabilities that they would not otherwise have, and removes those capabilities when the users are no longer logged in at the console. It provides two main kinds of capabilities: file permissions and authentication.</description>
        <scan_weight>1</scan_weight>
        <action_weight>1</action_weight>
        <severity_level>10</severity_level>
        <platforms>
          <cpe-item name="cpe:/o:centos:centos:4"/>
          <cpe-item name="cpe:/o:centos:centos:5"/>
          <cpe-item name="cpe:/o:centos:centos:6"/>
          <cpe-item name="cpe:/o:novell:opensuse:10"/>
          <cpe-item name="cpe:/o:novell:opensuse:11"/>
