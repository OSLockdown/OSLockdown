<?xml version="1.0" encoding="UTF-8"?>
<security_module sortKey="100" name="Lock account after three failed login attempts">
        <library>AccountLocks</library>
        <description>Accounts are often compromised through the use of brute force account name and password guessing attempts. These attempts can be partially prevented by implementing account locking on your system. When an attacker attempts to force open an account, the account becomes locked after three failed login attempts.</description>
        <scan_weight>1</scan_weight>
        <action_weight>1</action_weight>
        <severity_level>1</severity_level>
