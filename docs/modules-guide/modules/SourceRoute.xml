          <entry morerows="4">
            <literallayout class="monospaced">
net.ipv4.conf.all.accept_source_route = 0
net.ipv4.conf.default.accept_source_route = 0</literallayout>
            <indexterm>
              <primary>accept_source_route</primary>
            </indexterm>
          </entry>
        </row>
        <row>
          <entry>Red Hat Enterprise Linux 4</entry>
